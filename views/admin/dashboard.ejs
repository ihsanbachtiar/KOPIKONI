    <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-8">
        <h2 class="text-xl font-bold text-gray-100 mb-4">Grafik Penjualan Bulanan</h2>
        <div class="relative h-80"> <canvas id="monthlySalesChart" class="w-full"></canvas> </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <a href="/admin/categories" class="block bg-gray-800 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 p-6">
            <h3 class="text-xl font-bold text-white mb-2">Manajemen Kategori</h3>
            <p class="text-gray-400">Tambah, edit, atau hapus kategori menu.</p>
            <span class="inline-block mt-4 px-4 py-2 bg-amber-600 text-white text-sm font-medium rounded-lg hover:bg-amber-700">Lihat Kategori</span>
        </a>

        <a href="/admin/orders" class="block bg-gray-800 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 p-6">
            <h3 class="text-xl font-bold text-white mb-2">Manajemen Pesanan</h3>
            <p class="text-gray-400">Lihat, update status, dan kelola semua pesanan pelanggan.</p>
            <span class="inline-block mt-4 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700">Lihat Pesanan</span>
        </a>
    </div>
<div id="monthlySalesData" style="display:none;"><%- JSON.stringify(monthlySales || []) %></div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const salesDataElement = document.getElementById('monthlySalesData');
        let salesData = [];
        if (salesDataElement && salesDataElement.textContent) {
            try {
                salesData = JSON.parse(salesDataElement.textContent);
            } catch (e) {
                console.error("Error parsing monthly sales data:", e);
            }
        }
        
        const labels = salesData.map(data => data.month);
        const revenues = salesData.map(data => data.revenue);

        const ctx = document.getElementById('monthlySalesChart').getContext('2d');
        const monthlySalesChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Pendapatan (Rp)',
                    data: revenues,
                    backgroundColor: 'rgba(251, 191, 36, 0.6)', 
                    borderColor: 'rgba(251, 191, 36, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            color: '#e2e8f0',
                            callback: function(value, index, ticks) {
                                return 'Rp ' + new Intl.NumberFormat('id-ID').format(value);
                            }
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        }
                    },
                    x: {
                        ticks: {
                            color: '#e2e8f0'
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        }
                    }
                },
                plugins: {
                    legend: {
                        labels: {
                            color: '#e2e8f0'
                        }
                    }
                }
            }
        });
    });
</script>

