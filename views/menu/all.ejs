<%- include('../partials/header', { title: 'Menu-all' }) %> <% // Menambahkan title %>

<main class="p-8 bg-gray-900 overflow-y-auto" style="height: calc(100vh - 64px); width: calc(100vw - 16rem);">

  <h1 class="text-4xl font-extrabold text-amber-300 mb-10">Telusuri Menu Kami</h1>

  <% if (groupedMenu && groupedMenu.length > 0) { %>
    <% groupedMenu.forEach(group => { %>
      
      <% if (group.items.length > 0) { %>
        
        <section id="<%= group.category_slug %>" class="mb-16 w-full">
          <h2 class="text-3xl font-bold text-amber-300 mb-8 border-b-2 border-gray-700 pb-4">
            <%= group.category_name %>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            <% group.items.forEach(item => { %>              
              <div class="bg-gray-800 rounded-xl shadow-lg overflow-hidden transform hover:scale-105 transition-all duration-300 group relative border border-gray-700 hover:border-amber-600">
                <div class="h-48 overflow-hidden">
                  <img src="<%= item.image ? item.image : 'https://placehold.co/400x300/27272a/a16207?text=KopiKoni' %>" alt="<%= item.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500 ease-in-out">
                </div>
                <div class="p-6 flex flex-col" style="min-height: 240px;">
                  <span class="block text-sm text-gray-500 mb-2"><%= item.category_name %></span>
                  <h4 class="text-xl font-bold text-white mb-2"><%= item.name %></h4>
                  <p class="text-gray-400 text-sm mb-4 flex-grow"><%= item.description %></p>
                  
                  <div class="flex justify-between items-center mt-auto pt-4 border-t border-gray-700">
                    <span class="text-2xl font-bold text-amber-400">Rp <%= item.price.toLocaleString('id-ID') %></span>
                    <form action="/order/add" method="POST">
                      <input type="hidden" name="menu_id" value="<%= item.menu_id %>">
                      <input type="hidden" name="quantity" value="1">
                      
                      <button type="submit" class="bg-amber-600 hover:bg-amber-700 text-white px-3 py-2 rounded-lg text-sm font-semibold transform hover:scale-105 transition-all duration-300">
                        + Keranjang
                      </button>
                    </form>
                  </div>
                </div>
                <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
              </div>
              
            <% }); %>
          </div>
        </section>
      <% } %>
    <% }); %>
  <% } else { %>
    <p class="text-gray-500 col-span-full text-center text-xl">
      Belum ada menu yang tersedia. Silakan cek kembali nanti.
    </p>
  <% } %>

</main>


<%- include('../partials/footer') %>

