<%- include('partials/header', { title: 'Dashboard KopiKoni' }) %>
<main class="flex-1 p-8 bg-gray-900">
  
  <section 
    class="group mb-12 text-center rounded-xl shadow-xl border border-gray-700 relative overflow-hidden"
    data-aos="fade-in"
  >
    <div class="absolute inset-0 overflow-hidden rounded-xl">
      <img src="/images/image.png" 
           alt="KopiKoni Banner" 
           class="w-full h-full object-cover object-center transition-transform duration-500 ease-in-out group-hover:scale-110">
    </div>
    
    <div class="absolute inset-0 bg-black opacity-60 group-hover:opacity-75 transition-opacity duration-300 z-0 rounded-xl"></div>
    
    <div class="relative z-10 py-16 px-6"> 
      <h2 class="text-5xl font-extrabold text-amber-300 mb-4 animate-fade-in-down text-shadow-lg">
        Selamat Datang di KopiKoni, <%= user ? user.name.split(' ')[0] : 'Tamu' %>!
      </h2>
      <p class="text-xl text-gray-200 max-w-2xl mx-auto animate-fade-in-up text-shadow-md">
        Jelajahi berbagai pilihan kopi terbaik dan hidangan lezat kami. Nikmati setiap tegukan dan gigitan!
      </p>
      <div class="mt-8 animate-fade-in-up delay-200">
        <a href="/menu/all" class="bg-amber-600 hover:bg-amber-700 text-white font-semibold py-3 px-8 rounded-full shadow-lg transform hover:scale-105 transition-all duration-300 mr-4 animate-pulse-glow">
          Lihat Semua Menu
        </a>
        <a href="/order/cart" class="bg-gray-700 hover:bg-gray-600 text-gray-200 font-semibold py-3 px-8 rounded-full shadow-lg transform hover:scale-105 transition-all duration-300">
          Keranjang Saya
        </a>
      </div>
    </div>
  </section>


  <section class="mb-12" id="menu-list">
    <h3 class="text-3xl font-bold text-amber-300 mb-8 border-b-2 border-gray-700 pb-4">
      Pilihan Menu Kami
    </h3>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      
      <% if (menuItems && menuItems.length > 0) { %>
        <% menuItems.forEach((item, i) => { %>
          <div data-aos="fade-up" data-aos-delay="<%= (i % 4) * 100 %>" class="bg-gray-800 rounded-xl shadow-lg overflow-hidden transform hover:scale-105 transition-all duration-300 group relative border border-gray-700 hover:border-amber-600 shadow-amber-900/10">
            
            <div class="h-48 overflow-hidden">
              <img src="<%= item.image ? item.image : 'https://placehold.co/400x300/27272a/a16207?text=KopiKoni' %>" alt="<%= item.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500 ease-in-out">
            </div>
            <div class="p-6 flex flex-col" style="min-height: 240px;">
              <span class="block text-sm text-gray-500 mb-2"><%= item.category_name %></span>
              <h4 class="text-xl font-bold text-white mb-2"><%= item.name %></h4>
              <p class="text-gray-400 text-sm mb-4 flex-grow"><%= item.description %></p>
              
              <div class="flex justify-between items-center mt-auto pt-4 border-t border-gray-700">
                
                <span class="text-2xl font-bold text-amber-400">
                  <%= item.price.toLocaleString('id-ID', { style: 'currency', currency: 'IDR', maximumFractionDigits: 0 }) %>
                </span>
                
                <button type="button" 
                        class="add-to-cart-btn bg-amber-600 hover:bg-amber-700 text-white px-3 py-2 rounded-lg text-sm font-semibold transform hover:scale-105 transition-all duration-300"
                        data-menu-id="<%= item.menu_id %>"
                        data-menu-name="<%= item.name %>"
                        data-menu-price="<%= item.price %>"
                        data-menu-image="<%= item.image %>">
                  + Keranjang
                </button>
               
              </div>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
          </div>
        <% }); %>
      <% } else { %>
        <p class="text-gray-500 col-span-full text-center">Belum ada menu yang tersedia saat ini.</p>
      <% } %>
      
    </div>
  </section>

</main>

<div id="quantityModal" class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 hidden">
    <div class="bg-gray-800 p-8 rounded-2xl shadow-xl w-full max-w-sm border border-gray-700 relative" data-aos="zoom-in" data-aos-duration="300">
        
        <h2 class="text-2xl font-bold text-amber-300 mb-6" id="modal-menu-name">Tambahkan ke Keranjang</h2>
        
        <div class="flex items-center space-x-4 mb-6 border-b border-gray-700 pb-4">
            <img id="modal-menu-image" src="https://placehold.co/80" alt="Menu Item" class="w-16 h-16 object-cover rounded-md">
            <div>
                <div class="text-xl font-semibold text-white">Harga Satuan: <span id="modal-menu-price-display" class="text-amber-400">Rp 0</span></div>
                <div class="text-sm text-gray-400">Total: <span id="modal-total-display" class="font-medium text-amber-300">Rp 0</span></div>
            </div>
        </div>

        <form action="/order/add" method="POST" id="quantityForm" class="space-y-4">
            <input type="hidden" name="menu_id" id="modal-menu-id">
            
            <div class="mb-6">
                <label for="quantity" class="block text-gray-300 text-sm font-bold mb-2">Pilih Jumlah:</label>
                <div class="flex items-center justify-center space-x-4">
                    <button type="button" id="decreaseQuantity" class="bg-gray-700 text-white p-2 rounded-full text-xl hover:bg-gray-600 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">&minus;</button>
                    
                    <input type="number" name="quantity" id="modal-quantity" value="1" min="1" required 
                           class="w-20 p-3 text-center bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-amber-500 text-xl font-bold"
                           oninput="updateModalTotal()">

                    <button type="button" id="increaseQuantity" class="bg-amber-600 text-white p-2 rounded-full text-xl hover:bg-amber-700 transition-colors">+</button>
                </div>
            </div>

            <button type="submit" class="w-full bg-amber-600 hover:bg-amber-700 text-white font-bold py-3 rounded-lg transition-all transform hover:scale-105">
                Tambahkan ke Keranjang
            </button>
        </form>

        <button type="button" id="closeQuantityModal" class="absolute top-4 right-5 text-gray-500 hover:text-white text-3xl">&times;</button>
    </div>
</div>

<%- include('partials/footer') %>